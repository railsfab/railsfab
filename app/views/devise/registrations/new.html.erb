<button class='btn btn-info btn-lg bottom-flat'>Sign up</button>
<div class='well'>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'nifty_form'}) do |f| %>
    <div class='text-danger'>
  <%= devise_error_messages! %>
  </div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: 'form-control medium-input' %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, class: 'form-control medium-input' %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class: 'form-control medium-input' %></div>

 <br />
  <div><%= f.submit "Sign up", class: 'btn btn-primary ' %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
