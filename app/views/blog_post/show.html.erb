<div class='well well-sm'>
    <h2> <%= @post.title %></h2>
</div>
<div class='well' style='min-height: 300px; '> 
    <%= @post.content.html_safe %>
</div>
<button class='btn btn-info btn-lg bottom-flat' >Post a comment</button>
<div class='well'>
    <%= form_for @comment, url: '', html: {class: 'comment_form'} do |f| %>
    
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    <br />

    <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
    <br />

    <%= f.text_area :comment, class: 'form-control', placeholder: 'Comment' %>
    <br />
    <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
</div>
<button class='btn btn-info btn-lg bottom-flat'>Comments</button>
<% for comment in @post.comments %>
    <div class='well'>
        <%= comment.comment %>
        <h6> By <%= comment.name %> </h6>
    </div>
<% end %>
<% if @post.comments.count == 0 %>
    <h6> No comments for this post !</h6>
<% end %>

