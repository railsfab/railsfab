<% content_for :container_class do %>blog-container <% end %>
<div class="well" id="posts-list">
<% @posts.each do |post| %>
    <div class="post-block"> 
        <div class="post-block-left col-md-2">
            <img src="<%= gravatar_image(post.author.email) %>" />
            <div class="fullname">
                <%= link_to post.author.available_name, profile_path(username: post.author.username) %></div>
            <div class="post-date"> <%= post.created_at.strftime("%dth %b, %Y") %></div>
            <div class="post-comment-count">  <i class="fa fa-comments">&nbsp; <%= post.comments.count %></i> </div>

        </div>
        <div class="post-block-right col-lg-10">
            <div class="post-title"><%= link_to post.title, post_show_path(slug: post.slug) %></div>
            <div class="post-body hide"><div class="post-body-content"><%= truncate(post.content, length: 700) %></div>
                <div class="read-more">
                    <%= link_to "Read more..", post_show_path(slug: post.slug) %>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
<% end %>
</div>
<div class="well well-sm">
<%= paginate @posts %>
</div>
