<button class='btn btn-info btn-lg bottom-flat'>Edit Page</button>
<div class='well'>
<% if @page.errors.any? %>
    <p class='alert alert-danger'>Errors</p>
    <% @page.errors.full_messages.each do |e| %>
        <p class='text-danger'><%= e %></p>
    <% end %>
<% end %>
<%= form_for @page, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    <br />
    <%= f.text_area :content, size: "60x12", class: 'form-control', placeholder: 'Content'   %>
    <br />
    <%= f.submit "Update", class: "btn btn-primary"%>

<% end %>
</div>
